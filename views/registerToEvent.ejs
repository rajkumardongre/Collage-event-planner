<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <% if(result) {%>
    <title><%= result.title %></title>
    <% }else { %>
    <title><%= msg %></title>
    <% } %>
  </head>
  <body>
    <!-- NAVBAR START -->
		<nav
        class="navbar navbar-expand-lg navbar-light bg-light"
    >
        <div class="container-fluid">
            <a class="navbar-brand" href="/"
                >VishwaEvent</a
            >
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNav"
                aria-controls="navbarNav"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span
                    class="navbar-toggler-icon"
                ></span>
            </button>
            <div
                class="collapse navbar-collapse"
                id="navbarNav"
            >
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a
                            class="nav-link active"
                            aria-current="page"
                            href="/"
                            >Home</a
                        >
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/event"
                            >All Events</a
                        >
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact"
                            >Contact</a
                        >
                    </li>
                </ul>
            
            </div>
                <a href="/club/event/add"
                    class="btn btn-success"
                >
                    Add Event
                </a>
        </div>
    </nav>
    <!-- NAVBAR END -->
    <!-- Add Event Form Start -->
    <% if(result) {%>
        
		<div class="container border mt-5 mb-5 p-5">
            <% if(msg != '') { %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                </div>
            <% } %>
			<u><p class="display-6 text-center">Rigistration Form : <strong> <%= result.title %> </strong></p></u>
			<form class="row g-3" action="/register/<%= result.id %>" method="post">
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" id="inputPassword4">
                </div>
                <div class="col-md-6">
                  <label for="inputEmail4" class="form-label">Email</label>
                  <input type="email" class="form-control" name="email" id="inputEmail4">
                </div>
                
                <div class="col-md-6">
                  <label for="inputCity" class="form-label">Phone Number</label>
                  <input type="number" name="phoneNumber" class="form-control" id="inputCity">
                </div>
                <div class="col-md-6">
                    <label for="inputCity" class="form-label">PRN Number</label>
                    <input type="number" name="prnNumber" class="form-control" id="inputCity">
                  </div>
                <div class="col-md-4">
                  <label for="inputState" class="form-label">Year</label>
                  <select id="inputState" name="year" class="form-select">
                    <option selected value="1">1st Year</option>
                    <option value="2">2nd Year</option>
                    <option value="3">3rd Year</option>
                    <option value="4">4th Year</option>
                  </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="inputState" class="form-label">Division</label>
                    <select id="inputState" name="division" class="form-select">
                      <option selected value="A">A</option>
                      <option value="B">B</option>
                      <option value="C">C</option>
                      <option value="D">D</option>
                    </select>
                </div>
                  
                  <hr />
                  <div class="row" style="margin: 1rem 0 0 0">
                      <div class="col">
                          <a
                              href="/"
                              class="btn"
                              style="width: 100%; color: white; background-color: #955144"
                          >
                              <b>Back</b>
                          </a>
                      </div>
                      <div class="col">
                          <button type="submit" class="btn btn-dark" style="width: 100%">
                              <b>Apply Now</b>
                          </button>
                      </div>
                  </div>
              </form>
		</div>
    <% }else {%>
        <div class="p-5 text-center">
			<p class="lead"><%= msg %></p>
			<a href="/" class="btn" style="color: white; background-color: #955144; width: 12rem;">
				<b>Back</b>
			</a>
		</div>
    <% } %>
		<!-- Add Event Form End -->

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    
  </body>
</html>